{
    "manifest_version": 3,
    "name": "QR Code Buddy",
    "description": "The simple QR Code Generator that does one thing and does it well.",
    "version": "0.0.1",
    "icons": {
        "16": "resources/logo/logo-16.png",
        "48": "resources/logo/logo-48.png",
        "128": "resources/logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Chrome Addon v3 Starter",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": [
            "foreground.js",
            "resources/qr-code.js",
            "resources/popup.js"
        ],
        "matches": ["https://github.com/*"]
    }]
}
